# cPanel Varnish Cache Manager Plugin Configuration
name = Varnish Cache Manager
description = User-friendly Varnish cache management for individual domains
version = 1.0.0
author = Your Company
email = support@yourcompany.com
url = https://yourcompany.com

# Plugin settings
icon = varnish-icon.png
category = Cache
priority = 50

# Access permissions
access_level = user

# Plugin files
main_file = varnish_user.cgi
template_dir = templates
lib_dir = lib

# Features
features = cache_purging,url_monitoring,statistics,performance_metrics

# Dependencies
requires_perl_modules = JSON,LWP::UserAgent,File::Slurp,Template,CGI,Cpanel::Form
requires_system_packages = varnish

# Integration
cpanel_integration = true
uses_cpanel_api = true